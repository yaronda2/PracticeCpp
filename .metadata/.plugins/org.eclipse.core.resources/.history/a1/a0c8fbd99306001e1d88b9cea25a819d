#include <iostream>
#include <list>

#ifndef SIMPLESTUCK_H_
#define SIMPLESTUCK_H_

using namespace std;

template<class T>
class SimpleStuck {
public:
	explicit SimpleStuck();
	virtual ~SimpleStuck();

	virtual void Push(int num = 0);
	virtual void Pop();
	virtual int Peek();
	virtual bool IsEmpty();
	virtual int size();

private:
	template<class T>
	std::list<T> storage;

};

#endif /* SIMPLESTUCK_H_ */
